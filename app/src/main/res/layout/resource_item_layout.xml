<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resource_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="hardCodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resource_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ellipsize="middle"
            android:lines="1"
            android:maxWidth="250dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Resource name . This is a really long long long long name" />

        <ImageView
            android:id="@+id/hasLink"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:contentDescription="hasLink"
            android:src="@drawable/baseline_link_24"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/resource_name"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="16dp"
            android:contentDescription="favorite"
            android:src="@drawable/baseline_favorite_24"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/hasLink"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resource_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resource_name"
            tools:text="100,01KB" />

        <TextView
            android:id="@+id/resource_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/resource_size"
            app:layout_constraintTop_toBottomOf="@id/resource_name"
            tools:text="08:50, 14 thg 6, 2023" />

        <ImageButton
            android:id="@+id/buttonMore"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="#00000000"
            android:contentDescription="ButtonMore"
            android:src="@drawable/baseline_more_vert_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>