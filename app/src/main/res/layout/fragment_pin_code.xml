<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navigation.settings.PinCodeFragment">

    <TextView
        android:id="@+id/enter_pin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your pin code"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        />
    <com.mukeshsolanki.OtpView
        android:id="@+id/enter_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/enter_pin_label"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:OtpItemCount="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberPassword"
        app:OtpViewType="rectangle"/>
    <TextView
        android:id="@+id/confirm_pin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm pin"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/enter_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"
        />
    <com.mukeshsolanki.OtpView
        android:id="@+id/confirm_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_pin_label"
        android:focusableInTouchMode="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberPassword"
        app:OtpItemCount="6"
        app:OtpViewType="rectangle"/>
    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIN not match"
        app:layout_constraintTop_toBottomOf="@id/confirm_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:textColor="@color/red"/>
</androidx.constraintlayout.widget.ConstraintLayout>