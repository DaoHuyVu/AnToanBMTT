<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cloudStorageFragment">

    <fragment
        android:id="@+id/cloudStorageFragment"
        android:name="com.example.antoanbmtt.ui.navigation.cloud.CloudStorageFragment"
        android:label="Cloud Storage"
        tools:layout="@layout/fragment_cloud_storage" >
        <action
            android:id="@+id/action_cloudStorageFragment_to_resourceDetailsFragment"
            app:destination="@id/resourceDetailsFragment" />
        <action
            android:id="@+id/action_cloudStorageFragment_to_shareDetailsFragment"
            app:destination="@id/shareDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/shareFragment"
        android:name="com.example.antoanbmtt.ui.navigation.share.ShareFragment"
        android:label="Share"
        tools:layout="@layout/fragment_share" >
        <action
            android:id="@+id/action_shareFragment_to_resourceDetailsFragment"
            app:destination="@id/resourceDetailsFragment" />
        <action
            android:id="@+id/action_shareFragment_to_shareDetailsFragment"
            app:destination="@id/shareDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/recycleBinFragment"
        android:name="com.example.antoanbmtt.ui.navigation.bin.RecycleBinFragment"
        android:label="Recycle Bin"
        tools:layout="@layout/fragment_recycle_bin" >
        <action
            android:id="@+id/action_recycleBinFragment_to_resourceDetailsFragment"
            app:destination="@id/resourceDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.example.antoanbmtt.ui.navigation.info.UserInfoFragment"
        android:label="My account"
        tools:layout="@layout/fragment_user_info" />
    <fragment
        android:id="@+id/resourceDetailsFragment"
        android:name="com.example.antoanbmtt.ui.navigation.details.ResourceDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_resource_details">
        <argument
            android:name="resourceId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/shareDetailsFragment"
        android:name="com.example.antoanbmtt.ui.navigation.share_details.ShareDetailsFragment"
        android:label="Share Details"
        tools:layout="@layout/fragment_share_details" >
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/linkFragment"
        android:name="com.example.antoanbmtt.ui.navigation.link.LinkFragment"
        android:label="Link"
        tools:layout="@layout/fragment_link" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.antoanbmtt.ui.navigation.settings.SettingsFragment"
        android:label="Settings">
        <action
            android:id="@+id/action_settingsFragment_to_pinCodeFragment"
            app:destination="@id/pinCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/pinCodeFragment"
        android:name="com.example.antoanbmtt.ui.navigation.settings.PinCodeFragment"
        android:label="Pin"
        tools:layout="@layout/fragment_pin_code" >
        <action
            android:id="@+id/action_pinCodeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/settingsFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>